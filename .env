# .env
# Demo environment variables for Ria Money Transfer

# Application Environment
REACT_APP_ENV=demo
REACT_APP_VERSION=1.0.0

# API Configuration (for future use)
REACT_APP_API_BASE_URL=https://api.demo-moneytransfer.com
REACT_APP_API_TIMEOUT=30000

# Demo Settings
REACT_APP_DEMO_MODE=true
REACT_APP_SKIP_VALIDATIONS=true

# Analytics (optional)
REACT_APP_GA_TRACKING_ID=
REACT_APP_HOTJAR_ID=

# Feature Flags
REACT_APP_ENABLE_LOGGING=true
REACT_APP_ENABLE_CARD_VALIDATION=false
REACT_APP_ENABLE_REAL_PAYMENTS=false

# Default Values (fallback if URL params missing)
REACT_APP_DEFAULT_SENDER_COUNTRY=US
REACT_APP_DEFAULT_RECIPIENT_COUNTRY=Mexico
REACT_APP_DEFAULT_CURRENCY=MXN
REACT_APP_DEFAULT_EXCHANGE_RATE=18.78

# Support Information
REACT_APP_SUPPORT_EMAIL=romanov.sp.one@gmail.com
REACT_APP_SUPPORT_PHONE=1-800-DEMO-RIA